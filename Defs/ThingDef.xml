<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
	<ThingDef Name="Tenants_ScrollBase" ParentName="ResourceBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<stackLimit>75</stackLimit>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<techLevel>Medieval</techLevel>
		<statBases>
			<Mass>0.50</Mass>
			<MaxHitPoints>10</MaxHitPoints>
			<Flammability>1</Flammability>
			<DeteriorationRate>1.0</DeteriorationRate>
		</statBases>
		<tickerType>Normal</tickerType>
		<thingCategories>
			<li>Tenants_Scrolls</li>
		</thingCategories>		
		<costStuffCount>5</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
			<li>Fabric</li>
		</stuffCategories>
	</ThingDef>

	<ThingDef Name="Tenant_ScrollDiplomatic" ParentName="Tenants_ScrollBase" >
		<defName>Tenant_ScrollDiplomatic</defName>
		<label>diplomatic scroll</label>
		<description>A diplomatic scroll that tries to appeal to the masses.</description>
		<graphicData>
			<texPath>Goob/Scrolls/ScrollDiplomatic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>100</MarketValue>
			<WorkToMake>700</WorkToMake>
		</statBases>
		<costList>
			<Silver>10</Silver>
		</costList>		
		<recipeMaker>
			<workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
			<workSkill>Social</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>	
			<recipeUsers>
				<li>TableStonecutter</li>
				<li>TableSculpting</li>
				<li>CraftingSpot</li>
			</recipeUsers>
			<skillRequirements>
				<Social>4</Social>
			</skillRequirements>
		</recipeMaker>
		<comps>
			<li Class="Tenants.Comps.CompProps_Scroll">
				<scroll>1</scroll>
			</li>
		</comps>
	</ThingDef>

