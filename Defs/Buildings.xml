<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
	<ThingDef ParentName="BuildingBase">
		<defName>Tenant_MessageBox</defName>
		<label>messagebox</label>
		<description>A message box, commonly used to send messages to friends and/or enemies. Couriers tend to demand these as they are a fickle bunch.</description>
		<thingClass>Tenants.Building_MessageBox</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<uiIconPath>Things/Building/LetterBox</uiIconPath>
		<uiIconScale>0.7</uiIconScale>
		<pathCost>20</pathCost>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>800</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Mass>10</Mass>
			<Beauty>1</Beauty>
		</statBases>
		<size>(1,1)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>60</costStuffCount>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<designationCategory>Misc</designationCategory>
		<resourcesFractionWhenDeconstructed>0.2</resourcesFractionWhenDeconstructed>
		<comps>
			<li Class="Tenants.Comp.MessageBox"/>
			<li Class="Tenants.Comp.GraphicAlternator">
				<Texture>
					<graphicData>
						<texPath>Things/Building/LetterBox</texPath>
						<graphicClass>Graphic_Single</graphicClass>
						<shaderType>CutoutComplex</shaderType>
						<drawSize>(1,1)</drawSize>
					</graphicData>
				</Texture>
				<TextureAlternate>
					<graphicData>
						<texPath>Things/Building/LetterBoxFull</texPath>
						<graphicClass>Graphic_Single</graphicClass>
						<shaderType>CutoutComplex</shaderType>
						<drawSize>(1,1)</drawSize>
					</graphicData>
				</TextureAlternate>
			</li>
			<li Class="Tenants.Comp.CompProps_EraAlternator">
				<Texture>
					<graphicData>
						<texPath>Things/Building/MailBox</texPath>
						<graphicClass>Graphic_Single</graphicClass>
						<shaderType>CutoutComplex</shaderType>
						<drawSize>(1,1)</drawSize>
					</graphicData>
				</Texture>
				<TextureAlternate>
					<graphicData>
						<texPath>Things/Building/MailBox</texPath>
						<graphicClass>Graphic_Single</graphicClass>
						<shaderType>CutoutComplex</shaderType>
						<drawSize>(1,1)</drawSize>
					</graphicData>
				</TextureAlternate>				
				<TechLevel>3</TechLevel>
			</li>
		</comps>
		<rotatable>true</rotatable>
	</ThingDef>
</Defs>